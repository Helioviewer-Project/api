{
    "scripts": {
        "test-python": "cd install && python3 -m pytest",
        "test": "vendor/bin/phpunit --bootstrap tests/autoload.php --fail-on-warning tests/unit_tests",
        "local-test": "vendor/bin/phpunit --bootstrap tests/autoload.php --stop-on-failure --fail-on-warning tests/unit_tests",
        "run-test": "vendor/bin/phpunit --bootstrap tests/autoload.php --stop-on-failure --fail-on-warning tests/unit_tests --filter ",
        "make-test-config": "management/ci/make_test_config.sh > settings/Config.ini"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/dgarciabriseno/helioviewer-event-interface.git"
        }
    ],
    "require": {
        "helioviewer/event-interface": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    }
}
